{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "prConcurrentLimit": 10,
  "major": {
    "enabled": false
  },
  "platformAutomerge": false,
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "docker dependency"
    },
    {
      "matchManagers": ["helmv3"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "helm3 dependency",
      "enabled": false
    },
    {
      "matchManagers": ["helm-values"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "helm values dependency"
    },
    {
      "matchManagers": ["cloudbuild"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Cloud Build dependency"
    },
    {
      "matchManagers": ["terraform"],
      "matchDepNames": ["google", "google-beta"],
      "groupName": "Google Terraform providers"
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "k8s/argocd/.*\\.yaml"
      ],
      "matchStrings": [
        " +targetRevision: +(?<currentValue>[^'\" ]+) +# renovate: depName=(?<depName>[^ \\n]+) +(extractVersion=(?<extractVersion>[^\\n]+))?",
      ]
    }
  ]
}

